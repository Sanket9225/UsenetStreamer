# Indexer manager configuration (supported: prowlarr, nzbhydra)
INDEXER_MANAGER=prowlarr
INDEXER_MANAGER_URL=http://your-indexer-host:9696
INDEXER_MANAGER_API_KEY=your-indexer-api-key
INDEXER_MANAGER_STRICT_ID_MATCH=false  # Set to 'true' to disable text-based fallback searches
#INDEXER_MANAGER_CACHE_MINUTES=10  # Optional override for NZBHydra cache duration (minutes)

# Legacy Prowlarr configuration (for backward compatibility)
PROWLARR_URL=http://your-prowlarr-host:9696
PROWLARR_API_KEY=your-prowlarr-api-key
PROWLARR_STRICT_ID_MATCH=false

# Addon metadata
ADDON_BASE_URL=https://your-addon-domain  # Need to be publicly accessible and secure (HTTPS)
MANIFEST_AUTH_PASSWORD=  # Optional: Set a password to protect the manifest endpoint. Leave empty to disable authentication.


# NZBDav configuration
NZBDAV_URL=http://localhost:3000
NZBDAV_API_KEY=your-nzbdav-api-key
NZBDAV_WEBDAV_URL=http://localhost:3000
NZBDAV_WEBDAV_USER=webdav-username
NZBDAV_WEBDAV_PASS=webdav-password

# NZBDav enhancements
#NZBDAV_HISTORY_FETCH_LIMIT=400  # How many completed history entries to scan for instant playback (max 500)
#NZBDAV_CACHE_TTL_MINUTES=1440  # How long to cache mounted NZBs in memory (0 = never expire, default = 24 hours)

# External metadata provider support
#EXTERNAL_SPECIAL_ADDON_URL=  # Optional external addon URL for special catalog support
#EXTERNAL_ADDON_URL=  # Alternate env var name

# NZB triage / health checks
#NZB_TRIAGE_ENABLED=false  # Enable NNTP-backed health checks for NZB candidates
#NZB_TRIAGE_TIME_BUDGET_MS=30000  # Total budget per request (ms) for triage work
#NZB_TRIAGE_MAX_CANDIDATES=25  # Max NZBs to download and analyse per request
#NZB_TRIAGE_PREFERRED_SIZE_GB=20  # Preferred release size used for candidate ranking
#NZB_TRIAGE_PRIORITY_INDEXERS=  # Comma-separated indexer IDs or names to prioritise
#NZB_TRIAGE_DOWNLOAD_CONCURRENCY=8  # Parallel NZB downloads during triage
#NZB_TRIAGE_DOWNLOAD_TIMEOUT_MS=10000  # Timeout for fetching individual NZBs
#NZB_TRIAGE_MAX_CONNECTIONS=60  # NNTP connection pool size when triage runs
#NZB_TRIAGE_STAT_TIMEOUT_MS=10000  # NNTP STAT timeout per segment (ms)
#NZB_TRIAGE_FETCH_TIMEOUT_MS=10000  # NNTP BODY timeout per segment (ms)
#NZB_TRIAGE_MAX_PARALLEL_NZBS=16  # Max concurrent NZB analyses
#NZB_TRIAGE_STAT_SAMPLE_COUNT=6  # Additional STAT checks once an archive passes
#NZB_TRIAGE_ARCHIVE_SAMPLE_COUNT=4  # Additional archive samples once one passes
#NZB_TRIAGE_MAX_DECODED_BYTES=32768  # How much yEnc payload to decode when sampling

# NZB Triage NNTP Configuration
#NZB_TRIAGE_NNTP_HOST=news.provider.net
#NZB_TRIAGE_NNTP_PORT=563
#NZB_TRIAGE_NNTP_TLS=true
#NZB_TRIAGE_NNTP_USER=username
#NZB_TRIAGE_NNTP_PASS=password
#NZB_TRIAGE_ARCHIVE_DIRS=  # Optional archive directories (use ';' on Windows, ':' on Unix)
